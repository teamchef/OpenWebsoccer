{% embed "page.twig" %}
{% block news_overview %}
	{% block page_title %}
		{{ i18n.getMessage("news_title") }}
	{% endblock %}
	{% block page_content %}
		{% set bild = '/img/newsoverview.png' %}{% if file_exists('img/newsoverview.png') %}<br>{% if cdnset %}<img src="{{ cdn }}{{ bild }}"/><br><br>{% else %}<img src="{{ root }}{{ bild }}"/><br><br>{% endif %}{% endif %}
		{% if articles|length == 0 %}
			{{ i18n.getMessage("news_no_items") }}
		{% endif %}
		{% for article in articles %}
			<h4><a href="{{ env.getInternalUrl("news-details","id=" ~ article.id) }}">{{ article.title }}</a></h4>
			<p><em>{{ article.date }}</em></p>
			<p>{{ article.teaser|raw }}</p>
			<p style="margin-bottom: 30px;"><a href="{{ env.getInternalUrl("news-details","id=" ~ article.id) }}">Mehr</a></p>
		{% endfor %}
		{{ pagination.paginator(paginator) }}
	{% endblock %}
{% endblock %}
{% endembed %}