{% if OPEN_WEBSOCCER is defined %}
{% extends "base.twig" %}
{% block page_title %}
	{{ i18n.getMessage("activitylog_box_title") }}
{% endblock %}
{% block page_content %}
	{% if entry.featureImage | length %}
		{% set image = entry.featureImage.first() %}
		{% if env.getConfig("cdn_root_set") %}
			<img src="{{ env.getConfig("cdn_root") }}/img/actionlogs.png"/><br><br>
		{% else %}
			<img src="{{ env.getConfig("context_root") }}/img/actionlogs.png"/><br><br>
		{% endif %}
	{% endif %}
	{% if env.user.isAdmin() %}
		{% if activities is defined and activities|length > 0 %}
			<table>
				{% for activity in activities %}
					{% set username = "<a href=\"" ~ env.getInternalUrl("user", "id=" ~ activity.user_id) ~ "\">" ~ activity.user_name|e ~ "</a>" %}
					<tr>
						<small>
							{{ env.getFormattedDatetime(activity.created_date) }}
							{{ i18n.getMessage("activitylog_" ~ activity.action_id)|format(username)|raw }}
							<br>
						</small>
					</tr>
				{% endfor %}
			</table>
		{% endif %}
	{% else %} {{ i18n.getMessage("admin") }}
	{% endif %}
	<p> Powered 2015 - 2016 by Rolf Joseph / ErdemCan</p>
{% endblock %}
{% endif %}