{% extends "base.twig" %}
{% block page_title %}
{{ i18n.getMessage("youthplayer-sell_navlabel") }}
{% endblock %}
{% block page_content %}
<form class="form-horizontal" method="post">
	<fieldset>
		<legend>{{ i18n.getMessage("youthplayer-sell_formlabel") }}</legend>
		{{ macro.textfield('transfer_fee',i18n.getMessage('entity_youthplayer_transfer_fee'),env.getRequestParameter('transfer_fee'),true,validationMsg,'number') }}
	</fieldset>
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">{{ i18n.getMessage('button_submit') }}</button>
		<a href="{{ env.getInternalUrl("youth-team") }}" class="btn">{{ i18n.getMessage('button_cancel') }}</a>
	</div>
	<input type="hidden" name="page" value="youthplayer-sell"/>
	<input type="hidden" name="id" value="{{ env.getRequestParameter('id') }}"/>
	<input type="hidden" name="action" value="sell-youthplayer"/>
</form>
{% endblock %}
