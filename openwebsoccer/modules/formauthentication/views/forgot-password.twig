{% embed "page.twig" %}
{% block forgot_password %}
	{% block page_title %}
		{{ i18n.getMessage("forgot-password_title") }}
	{% endblock %}
	{% block page_content %}
		{% set bild = '/img/forgotpassword.png' %}{% if file_exists('img/forgotpassword.png') %}<br>{% if cdnset %}<img src="{{ cdn }}{{ bild }}"/><br><br>{% else %}<img src="{{ root }}{{ bild }}"/><br><br>{% endif %}{% endif %}
		<form class="form-horizontal" method="post">
			{{ macro.textfield('useremail',i18n.getMessage('entity_users_email'),env.getRequestParameter('useremail'),true,validationMsg,'email') }}
			{% if captchaCode is defined and captchaCode|length > 0 %}
				{{ captchaCode|raw }}
			{% endif %}
			<div class="form-actions">
				<button type="submit" class="btn btn-primary">{{ i18n.getMessage('forgot-password_submit_button') }}</button>
			</div>
			<input type="hidden" name="page" value="forgot-password"/>
			<input type="hidden" name="action" value="send-password"/>
		</form>
	{% endblock %}
{% endblock %}
{% endembed %}